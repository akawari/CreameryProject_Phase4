<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="input-field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="input-field">
    <%= form.label :ssn %>
    <%= form.text_field :ssn %>
  </div>

  <div class="input-field">
    <%= form.label :date_of_birth %>
    <%= form.text_field :date_of_birth, prompt: "Date of Birth", class:"datepicker", :value => (form.object.date_of_birth.strftime('%B %d, %Y') if form.object.date_of_birth != nil) %>
  </div>

  <div class="input-field">
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :role %>
    <%= form.select :role, ['admin', 'manager', 'employee'], :prompt => 'Select One' %>

  </div>

  <div class="field">
    <%= form.check_box :active %>
    <%= form.label :active %>
  </div>
  
  <br>
  
  <h4>User Data</h4>
  
  <%= form.fields_for :user do |field| %>
    <div class="input-field">
    <%= field.label "Email" %>
    <%= field.text_field :email %>
    </div>
    
    <div class ="input-field">
    <%= field.label "Password" %>
    <%= field.password_field :password %>
    </div>
    
  <% end %>
<br>
  <div class="actions">
    <%= form.submit :class=>"btn waves-effect waves-light" %>
    <%= link_to 'Cancel', employees_path, :class => 'waves-effect waves-light btn red' %>
  </div>
<% end %>
